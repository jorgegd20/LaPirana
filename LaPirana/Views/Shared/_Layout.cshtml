<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LaPirana</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">LaPirana</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item container border border-dark">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item container border border-dark">
                            <a class="nav-link text-danger" asp-area="" asp-controller="Presentacion" asp-action="Contacto">Contacto</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Presentacion" asp-action="Servicios">Servicios</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Presentacion" asp-action="Somos">Somos</a>
                        </li>
                        <li class="nav-item container border border-dark">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Venta" asp-action="Catalogo">Catálogo</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Venta" asp-action="ProductosDestacados">ProductosDestacados</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Venta" asp-action="Servicios">Servicios</a>
                        </li>
                        <li class="nav-item container border border-dark">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Compra" asp-action="Pagar">Pagar</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Compra" asp-action="Resumen">Resumen</a>
                        </li>
                        <li class="nav-item container border border-dark">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cuenta" asp-action="Actualizar">Actualizar</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cuenta" asp-action="Iniciar">Iniciar</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cuenta" asp-action="Registro">Registro</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - LaPirana - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
